<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.kpi.activity.AddAccountActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/add_account_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_info_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="新增账号"
            android:textColor="#fff"
            android:textSize="16sp" />

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入姓名:"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_account_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv1"
            android:background="@drawable/bg_add_ed"
            android:singleLine="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入账号:"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_account"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv2"
            android:background="@drawable/bg_add_ed"
            android:singleLine="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入密码:"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_account_password"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv3"
            android:background="@drawable/bg_add_ed"
            android:inputType="textPassword"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请再次输入密码:"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_account_Repassword"
            android:layout_width="160dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv4"
            android:background="@drawable/bg_add_ed"
            android:inputType="textPassword"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="请选择查看:"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rg_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv5"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb1_add_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="区域"
                android:textColor="@android:color/holo_blue_dark" />

            <RadioButton
                android:id="@+id/rb2_add_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="产品"
                android:textColor="@android:color/holo_blue_dark" />
        </RadioGroup>


    </RelativeLayout>

    <Button

        android:id="@+id/btn_add_account_finish"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_margin="40dp"
        android:background="@drawable/bg_btn"
        android:text="完成"
        android:textColor="#fff"
        android:textSize="16sp" />
</LinearLayout>
